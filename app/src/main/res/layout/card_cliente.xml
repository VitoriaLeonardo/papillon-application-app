<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:layout_marginHorizontal="8dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_item_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingLeft="16dp">

            <TextView

                android:id="@+id/txt_item_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_item_cnpj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_item_nome" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="10dp"
                >

                <ImageButton
                    android:padding="8dp"
                    android:background="@null"
                    android:id="@+id/btn_editar_cli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_black_24dp"></ImageButton>

                <ImageButton
                    android:padding="8dp"
                    android:background="@null"
                    android:id="@+id/btn_deletar_cli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_black_24dp"
                    ></ImageButton>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>